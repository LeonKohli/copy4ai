{
  "name": "snapsource",
  "displayName": "SnapSource",
  "description": "Copy file and folder contents with project tree to clipboard for LLM context, with multiple output formats",
  "version": "0.5.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:snapsource.copyToClipboard"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snapsource.copyToClipboard",
        "title": "Copy to Clipboard (SnapSource)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "snapsource.copyToClipboard",
          "group": "navigation",
          "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot"
        }
      ]
    },
    "configuration": {
      "title": "SnapSource",
      "properties": {
        "snapsource.ignoreGitIgnore": {
          "type": "boolean",
          "default": true,
          "description": "Respect .gitignore rules when generating the project tree and copying files"
        },
        "snapsource.maxDepth": {
          "type": "number",
          "default": 5,
          "description": "Maximum depth of the project tree"
        },
        "snapsource.excludePatterns": {
          "type": "array",
          "default": ["node_modules", "*.log"],
          "description": "Additional patterns to exclude from the project tree and file copying (dot files are always ignored)"
        },
        "snapsource.outputFormat": {
          "type": "string",
          "enum": ["plaintext", "markdown", "json"],
          "default": "plaintext",
          "description": "Output format for the copied content"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "dependencies": {
    "ignore": "^5.3.1"
  }
}